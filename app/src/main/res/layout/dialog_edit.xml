<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="32dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/edt_name_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_family_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Family"
        app:layout_constraintStart_toStartOf="@+id/edt_name_dialog"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_dialog" />

    <EditText
        android:id="@+id/edt_age_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Age"
        app:layout_constraintStart_toStartOf="@+id/edt_family_dialog"
        app:layout_constraintTop_toBottomOf="@+id/edt_family_dialog" />

    <Button
        android:id="@+id/btn_edit_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:background="@android:color/holo_green_light"
        android:text="EDIT"
        app:layout_constraintEnd_toStartOf="@+id/btn_show"
        app:layout_constraintTop_toBottomOf="@+id/edt_age_dialog" />

    <Button
        android:id="@+id/btn_cancel_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:text="Cancel"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_edit_dialog"
        app:layout_constraintEnd_toEndOf="@+id/edt_age_dialog" />


</androidx.constraintlayout.widget.ConstraintLayout>